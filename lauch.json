{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI (3.12)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.main:app",
                "--reload"
            ],
            "python": "${command:python.interpreterPath}",
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}